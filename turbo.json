{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**",
        ".next/**",
        "build/**",
        "out/**"
      ]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": [
        "coverage/**",
        ".coverage",
        "test-results/**"
      ],
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.js",
        "src/**/*.jsx",
        "src/**/*.py",
        "tests/**/*",
        "__tests__/**/*",
        "**/*.test.*",
        "**/*.spec.*",
        "jest.config.*",
        "pytest.ini",
        "pyproject.toml"
      ]
    },
    "test:unit": {
      "dependsOn": ["^build"],
      "outputs": [
        "coverage/**",
        ".coverage"
      ]
    },
    "test:coverage": {
      "dependsOn": ["test"],
      "outputs": [
        "coverage/**",
        ".coverage",
        "coverage.xml",
        "htmlcov/**"
      ]
    },
    "lint": {
      "outputs": []
    },
    "type-check": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "format": {
      "outputs": []
    },
    "validate": {
      "dependsOn": ["lint", "type-check", "test"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  },
  "globalDependencies": [
    "package.json",
    "pnpm-workspace.yaml",
    "turbo.json",
    ".env",
    ".env.local"
  ]
} 