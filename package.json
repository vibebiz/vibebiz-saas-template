{
  "name": "@vibebiz/saas-template",
  "version": "1.0.0",
  "description": "VibeBiz SaaS Template - Progressive architecture for rapid SaaS development",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration",
    "test:e2e": "playwright test --config tests/playwright.config.ts",
    "test:accessibility": "playwright test --config tests/playwright.config.ts --grep accessibility",
    "test:cross-cutting": "npx jest --config tests/jest.config.mjs",
    "test:performance": "npx jest --config tests/jest.config.mjs --testPathPattern=performance",
    "test:security": "npx jest --config tests/jest.config.mjs --testPathPattern=security",
    "test:all": "npm run test && npm run test:cross-cutting",
    "test:comprehensive": "./tools/run-comprehensive-tests.sh",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "format": "turbo run format",
    "validate": "turbo run validate",
    "all-checks": "./tools/run-all-checks.sh"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.8.0",
    "@playwright/test": "^1.47.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.8",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "eslint": "^9.30.0",
    "eslint-plugin-security": "^3.0.1",
    "globals": "^16.2.0",
    "jest": "^30.0.3",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.1"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@10.12.4"
}
