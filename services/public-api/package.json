{
  "name": "@vibebiz/public-api",
  "version": "1.0.0",
  "description": "VibeBiz Public API Service",
  "private": true,
  "scripts": {
    "dev": "poetry run python -m uvicorn src.main:app --reload --host 0.0.0.0 --port 8000",
    "start": "poetry run python -m uvicorn src.main:app --host 0.0.0.0 --port 8000",
    "test": "poetry run pytest",
    "test:unit": "poetry run pytest -m unit",
    "test:integration": "poetry run pytest -m integration",
    "test:coverage": "poetry run pytest --cov=src --cov-report=html --cov-report=xml",
    "test:watch": "poetry run pytest -f",
    "lint": "poetry run ruff check src tests",
    "lint:fix": "poetry run ruff check --fix src tests",
    "format": "poetry run black src tests && poetry run isort src tests",
    "type-check": "poetry run mypy src",
    "clean": "rm -rf .pytest_cache htmlcov .coverage coverage.xml dist build *.egg-info"
  },
  "dependencies": {},
  "engines": {
    "python": ">=3.12"
  }
}
