{
  "name": "@vibebiz/public-web",
  "version": "1.0.0",
  "description": "VibeBiz Public Web Application",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "jest",
    "test:unit": "jest --testPathPatterns=__tests__",
    "test:e2e": "echo 'E2E tests moved to cross-cutting tests. Run: pnpm test:cross-cutting'",
    "test:accessibility": "echo 'Accessibility tests moved to cross-cutting tests. Run: pnpm test:cross-cutting'",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf .next dist coverage",
    "format": "prettier --write ."
  },
  "dependencies": {
    "next": "^15.3.4",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "@vibebiz/types": "workspace:*"
  },
  "devDependencies": {
    "@playwright/test": "^1.53.2",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.0.8",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@axe-core/playwright": "^4.10.2",
    "eslint": "^9.30.0",
    "eslint-config-next": "^15.3.4",
    "jest": "^30.0.3",
    "jest-environment-jsdom": "^30.0.2",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
